<%- include header %>
<form method="post">
  标题：<br />
  <input type="text" name="title" value="<%= post.title %>" /><br />
  标签：<br />
  <span><%= post.tag %></span>
  列表内容：<br />
  <textarea name="listContent" rows="10" cols="100"><%= post.listContent %></textarea><br />
  正文：<br />
  <textarea name="article" rows="20" cols="100"><%= post.article %></textarea><br />
  <input type="submit" value="保存修改" />
</form>
<%- include footer %>